<% provide(:page_title, " 食品一覧") %>
<main>
  <% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <% end %>

  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row pt-4">

      <!-- Left -->
      <div class="col-lg-9 pl-5">

        <!-- Introduction to Smartphone Apps -->
        <div class="row">
          <a href="/static_pages/mobile_app" class="pr-4 blue-text">ポケット糖質量のスマートフォンアプリが登場！👉ちょっと見てみる</a>
        </div>
        <!-- Foods list -->
        <%= render 'foods/foods' %>

      </div>
      <!--/.Left -->

      <!-- Right -->
      <div class="col-lg-3">

        <!-- Smartphone Apps badge -->
        <%= render 'layouts/mobile_app_banner' %>

        <!-- Caluculators -->
        <div class="view mt-1">
          <a href="/static_pages/calc/index">
            <img class="img-fluid" src="<%= asset_path 'calc/home_link_calculator.png' %>" alt="calculator page image">
          </a>
        </div>

        <!-- Ads -->
        <section class="row mt-4 ml-2">
          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <!-- web-PocketCarbo -->
          <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-6381489451756721" data-ad-slot="6829513953"
            data-ad-format="auto" data-full-width-responsive="true"></ins>
          <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </section>

        <section class="row mt-4 ml-2">
          <script type="text/javascript">
            amzn_assoc_ad_type = "responsive_search_widget";
            amzn_assoc_tracking_id = "sakurabird1-22";
            amzn_assoc_marketplace = "amazon";
            amzn_assoc_region = "JP";
            amzn_assoc_placement = "";
            amzn_assoc_search_type = "search_widget";
            amzn_assoc_width = "160";
            amzn_assoc_height = "600";
            amzn_assoc_default_search_category = "";
            amzn_assoc_default_search_key = "糖質";
            amzn_assoc_theme = "light";
            amzn_assoc_bg_color = "FFFFFF";
          </script>
          <script src="//z-fe.amazon-adsystem.com/widgets/q?ServiceVersion=20070822&Operation=GetScript&ID=OneJS&WS=1&Marketplace=JP"></script>
        </section>

        <!--/. Ads -->

      </div>
      <!--/.Right -->
    </div>
    <!--/. row -->

    <!-- SNS share button -->
    <div class="row mt-5">
      <%= render 'layouts/sns_share' %>
    </div>
    <!--/. SNS share button -->
  </div>
  <!--/. container -->

</main>
