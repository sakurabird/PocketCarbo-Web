<% provide(:page_title, " 食品一覧") %>
<main>
  <% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <% end %>

  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row pt-4">

      <!-- Left -->
      <div class="col-lg-9 pl-5">

        <!-- Introduction to Smartphone Apps -->
