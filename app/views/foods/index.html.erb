        </section>
        <!--/. Ads -->

      </div>
      <!--/.Right -->
    </div>
    <!--/. row -->

    <!-- SNS share button -->
    <div class="row mt-5">
      <%= render 'layouts/sns_share' %>
    </div>
    <!--/. SNS share button -->
  </div>
  <!--/. container -->

</main>
