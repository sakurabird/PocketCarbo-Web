<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Carbohydrate per 100g</th>
      <th>Carbohydrate per weight</th>
      <th>Weight</th>
      <th>Calory</th>
      <th>Protein</th>
      <th>Fat</th>
      <th>Sodium</th>
      <th>Type</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.carbohydrate_per_100g %></td>
        <td><%= food.carbohydrate_per_weight %></td>
        <td><%= food.weight %></td>
        <td><%= food.calory %></td>
        <td><%= food.protein %></td>
        <td><%= food.fat %></td>
        <td><%= food.sodium %></td>
        <td><%= food.type.name %></td>
        <td><%= food.kind.name %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food', new_food_path %>
