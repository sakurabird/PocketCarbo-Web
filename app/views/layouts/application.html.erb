<!DOCTYPE html>
<html lang="ja">
<html>
  <head>
    <%= render 'layouts/meta_tags' %>

    <title>ポケット糖質量 <%= yield(:page_title) %></title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'bootstrap.min': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'mdb.min': 'reload' %>

    <%= javascript_include_tag 'jquery-2.2.3.min' %>
    <%= javascript_include_tag 'tether.min' %>
    <%= javascript_include_tag 'bootstrap.min' %>
    <%= javascript_include_tag 'mdb.min' %>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">

    <%= render 'layouts/shim' %>
    <%= analytics_init if Rails.env.production? %>

    <!-- Google Adsense -->
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "ca-pub-6381489451756721",
            enable_page_level_ads: true
        });
    </script>

  </head>

  <body>
  <%= render 'layouts/header' %>

  <% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

  <%= yield %>

  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  <!-- レスポンシブ -->
  <ins class="adsbygoogle"
       style="display:block"
       data-ad-client="ca-pub-6381489451756721"
       data-ad-slot="6685554091"
       data-ad-format="auto"></ins>
  <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
  </script>

  <%= render 'layouts/footer' %>

  <%= debug(params) if Rails.env.development? %>

  <%= javascript_include_tag 'jquery-2.2.3.min' %>
  <%= javascript_include_tag 'tether.min' %>
  <%= javascript_include_tag 'bootstrap.min' %>
  <%= javascript_include_tag 'mdb.min' %>

  </body>
</html>
